<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard CSS3</title>
    <!-- font super icons as Fonts -->
    <script src="https://kit.fontawesome.com/4e6c12451b.js" crossorigin="anonymous"></script>
    <!-- stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/leaderboard.css">
</head>
<body>
    <%- include('partial/navbar', {active: "Home"}); %>
    <!-- Header start -->
    <header>
        <ul>
        <li><a href="/leaderboard/tic-tac-toe">TicTacToe</a></li>
        <li><a href="/leaderboard/snake-ladder">Snake and Ladder</a></li>
        <li><a href="/leaderboard/ludo">Ludo</a></li>
    </ul>
    </header>
    <!-- Header end -->
    <main>
        <!-- Top players and top Blogs -->
        <section class="container">
            <div class="top-players">
                <h2 class="section-title">Top Players</h2>
                <div class="players">
                    <% w.forEach(user => { %>
                        <div class="player">
                            <img src=<%= user.pic %> alt="">
                            <h3 class="player-name"><%= user.uName %></h3>
                            <h3 class="player-name"><%= user.wins %></h3>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>