
{
    "swagger": "2.0",
    "info": {
        "description": "This is a simple example NodeJS API project to demonstrate Swagger Documentation",
        "title": "Board Nights Site",
        "contact": {
            "email": "amalkrish12@gmail.com"
        }
    },
    "schemes": ["http"],
    "host": "localhost:5000",
    "paths" : {
        "/tic-tac-toe" : {
            "get" : {
                "summary" : "Tic Tac Toe Statistics",
                "description": "Get all statistics related to tic tac toe",
                "produces": ["/tic-tac-toe"],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "/tic-tac-toe"
                            }
                        }
                    }
                }
            }
        },
        "/snake-ladder" : {
            "get" : {
                "summary" : "Snake and Ladder Statistics",
                "description": "Get all statistics related to snake and ladder",
                "produces": ["/snake-ladder"],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "/snake-ladder"
                            }
                        }
                    }
                }
            }
        },
        "/ludo" : {
            "get" : {
                "summary" : "Ludo Statistics",
                "description": "Get all statistics related to ludo",
                "produces": ["/ludo"],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "/ludo"
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "summary" : "All user stats",
                "description": "Print all user stats and usernames",
                "produces": ["/users"],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "/users"
                            }
                        }
                    }
                }
            }
        },
        "/create-user" : {
            "post" : {
                "summary" : "Create a new user",
                "description": "Get all statistics related to ludo",
                "produces": ["/create-user"],
                "parameters": [{
                    "name": "user",
                    "in": "body",
                    "description": "User detail",
                    "required": true,
                    "type": "object"
                }],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/update-user" : {
            "put" : {
                "summary" : "Update user",
                "description": "Update the first and lastname of a user",
                "produces": ["/update-user"],
                "parameters": [{
                    "name": "user",
                    "in": "body",
                    "description": "User details",
                    "required": true,
                    "type": "object"
                }],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/delete-user" : {
            "delete" : {
                "summary" : "Delete a user",
                "description": "Delete a user and all related data",
                "produces": ["/delete-user"],
                "parameters": [{
                    "name": "uName",
                    "in": "body",
                    "description": "The username of the user",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        }
    }, 
    "definitions": {
        "userDetails": {
            "type": "object",
            "properties": {
                "uName": {
                     "type": "integer"
                },
                "password": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "fName": {
                    "type": "string"
                },
                "lName": {
                    "type": "string"
                },
                "age": {
                    "type": "integer"
                },
                "gender": {
                    "type": "string"
                }
            }
        },
        "statDetails": {
            "type": "object",
            "properties": {
                "uName": {
                    "type": "string"
                },
                "played": {
                    "type": "integer"
                },
                "wins": {
                    "type": "integer"
                },
                "losses": {
                    "type": "integer"
                }
            }
        }
    }
}